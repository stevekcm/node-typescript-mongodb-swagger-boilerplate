{
  "name": "typescript-mongodb-boilderplate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "watch:windows": "set NODE_ENV=development && concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch:mac": "NODE_ENV=development concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon -r dotenv/config build/server.js",
    "test": "mocha build/test/index.js --timeout 20000 --require build/test/hooks.js --exit --bail",
    "test:windows": "set NODE_ENV=test && tsc && mocha -r dotenv/config build/test/index.js --timeout 20000 --require build/test/hooks.js --exit --bail",
    "test:mac": "tsc && NODE_ENV=test mocha -r dotenv/config build/test/index.js --timeout 20000 --require build/test/hooks.js --exit --bail"
  },
  "keywords": [],
  "author": "stevekwokdev",
  "license": "APLv2",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "chai": "^4.3.4",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-jsdoc-swagger": "^1.6.7",
    "express-rate-limit": "^5.5.0",
    "express-validator": "^6.13.0",
    "helmet": "^4.6.0",
    "http": "^0.0.1-security",
    "jsonwebtoken": "^8.5.1",
    "log4js": "^6.3.0",
    "moment": "^2.29.1",
    "mongoose": "^6.0.12",
    "supertest": "^6.1.6"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/chai": "^4.2.22",
    "@types/express": "^4.17.13",
    "@types/express-rate-limit": "^5.1.3",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.6",
    "@types/supertest": "^2.0.11",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/validator": "^13.6.6",
    "concurrently": "^6.3.0",
    "eslint": "^8.1.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.0.0",
    "mocha": "^9.1.3",
    "nodemon": "^2.0.14",
    "prettier": "^2.4.1",
    "typescript": "^4.4.4"
  }
}
